extends layout

block content

	.container
		form(type='post' action='contact/send')
			h1 Contact
			.form-group
				label Name
				input.form-control(type='text',name='name',placeholder='enter yourname')
			.form-group
				label E-mail-Address
				input.form-control(type='email',name='email',placeholder='enter password')
			.form-group
				label Message
				input.form-control(type='text-area',name='message',placeholder='enter your message')
			button.btn.btn-default(type='submit') Submit
